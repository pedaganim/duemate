# Project Configuration
project_name = "duemate"
environment  = "dev"
aws_region   = "us-east-1"

# Customer/Tenant Configuration (optional)
# customer_name = "acmecorp"
# custom_domain = "invoices.acmecorp.com"

# DynamoDB Configuration
dynamodb_billing_mode      = "PAY_PER_REQUEST"  # or "PROVISIONED"
# dynamodb_read_capacity   = 5                   # Only for PROVISIONED mode
# dynamodb_write_capacity  = 5                   # Only for PROVISIONED mode
enable_dynamodb_pitr       = true
enable_dynamodb_encryption = true

# Lambda Configuration
lambda_runtime          = "nodejs20.x"
lambda_memory_size      = 512
lambda_timeout          = 30
lambda_log_retention_days = 7  # 1, 3, 5, 7, 14, 30, 60, 90, etc.

# VPC Configuration (optional)
enable_vpc = false
# vpc_cidr = "10.0.0.0/16"

# API Gateway Configuration
api_gateway_stage_name           = "prod"
enable_api_gateway_logging       = true
api_gateway_throttle_burst_limit = 5000
api_gateway_throttle_rate_limit  = 10000

# Cognito Configuration
cognito_password_minimum_length = 12
enable_cognito_mfa             = "OPTIONAL"  # "OFF", "OPTIONAL", or "ON"

# S3 and CloudFront Configuration
enable_cloudfront     = true
cloudfront_price_class = "PriceClass_100"  # PriceClass_100, PriceClass_200, or PriceClass_All
enable_s3_versioning  = true

# Monitoring Configuration
enable_monitoring = true
# alarm_email      = "alerts@example.com"  # Email for CloudWatch alarms

# EventBridge Configuration
reminder_check_schedule = "rate(1 hour)"  # or cron(0 * * * ? *)

# SQS Configuration
sqs_message_retention_seconds  = 345600  # 4 days
sqs_visibility_timeout_seconds = 300     # 5 minutes

# Third-party Integration Configuration (optional - stored in Secrets Manager)
# These values are sensitive and should not be committed to version control
# stripe_api_key     = "sk_test_..."
# twilio_account_sid = "AC..."
# twilio_auth_token  = "..."
# plaid_client_id    = "..."
# plaid_secret       = "..."

# Email Configuration (optional)
# email_from_address = "noreply@example.com"  # Must be verified in SES
# email_from_name    = "DueMate"

# Additional Tags (optional)
additional_tags = {
  ManagedBy = "Terraform"
  Team      = "Platform"
}
